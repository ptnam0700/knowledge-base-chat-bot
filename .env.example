# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-ada-002

# OpenAI Configuration (fallback)
USE_OPENAI=True
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://your-resource-name.openai.azure.com/
OPENAI_CHAT_MODEL=gpt-4o-mini
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
DISABLE_NLTK_DOWNLOADS=False

# Google Search API (for web fallback)
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_custom_search_engine_id_here

# SerpAPI (alternative web search)
SERPAPI_API_KEY=your_serpapi_key_here

# Application Settings
APP_NAME=Thunderbolts
APP_VERSION=1.0.0
DEBUG=False
LOG_LEVEL=INFO

# File Processing Settings
MAX_FILE_SIZE_MB=500
SUPPORTED_VIDEO_FORMATS=mp4,avi,mov,mkv,webm
SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a,flac,ogg
SUPPORTED_DOCUMENT_FORMATS=pdf,docx,txt

# Vector Database Settings
VECTOR_DB_PATH=./data/vectordb
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_QUERY=10

# Search Settings
SIMILARITY_THRESHOLD=0.7
MAX_WEB_SEARCH_RESULTS=5
RERANK_TOP_K=5

# Audio Processing Settings
AUDIO_SAMPLE_RATE=16000
NOISE_REDUCTION_STRENGTH=0.8
VOCAL_SEPARATION_MODEL=spleeter:2stems-16kHz

# Language Settings
DEFAULT_LANGUAGE=vi
SUPPORTED_LANGUAGES=vi,en,zh,ja,ko

# Java Settings (for LanguageTool grammar checking)
# JAVA_HOME=C:\Program Files\Java\jdk-21
# Ensure Java 17+ is installed and in PATH

# Note: The application will work without API keys but with limited functionality
# Essential features like text processing, memory system, and basic analysis will still work
